{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
        "linebreak-style": "off",
        "no-alert": "off",
        "no-underscore-dangle": "off",
        "import/prefer-default-export": "off",
        "import/no-extraneous-dependencies": [
            "error", 
            {
              "devDependencies": [
                "i:/dicoding/web/front-end-dicoding/twitter-like-app/node_modules/@reduxjs/toolkit/dist/index",
                "i:/dicoding/web/front-end-dicoding/twitter-like-app/node_modules/react-redux-loading-bar/index"
              ]
            }
        ],
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn",
        "react/jsx-props-no-spreading": "off"
    }
}
